
<p id="notice"><%= notice %></p>

<section class="fdb-block">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12 col-md-12 col-lg-6 col-xl-5">
        <h1>Business Contacts</h1>
        <p class="lead mb-5 text-dark">Please check out my friends/business contacts! Feel free to add yourself on that list!</p>
        <%= link_to 'Add Yourself', new_contact_path, :class => 'btn btn-primary text-light', :type => 'button' %>

      </div>
      <div class="col-12 col-md-8 m-auto ml-lg-auto mr-lg-0 col-lg-6 pt-5 pt-lg-0">
       <%= image_tag("online-contacts.svg", :alt => "rss feed") %>
      </div>
    </div>
  </div>
</section>

<section class="fdb-block p-5">
  <div class="container">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
          <th scope="col">Country</th>
          <th scope="col">City</th>
          <th scope="col">Gender</th>
          <th scope="col">Age</th>
          <th scope="col">Settings</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>

      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.name %></td>
            <td><%= contact.email %></td>
            <td><%= contact.phone %></td>
            <td><%= contact.country %></td>
            <td><%= contact.city %></td>
            <td><%= contact.gender %></td>
            <td><%= contact.age %></td>
            <td><%= link_to 'Show', contact, :class => 'btn-link text-decoration-none' %></td>
            <td><%= link_to 'Edit', edit_contact_path(contact), :class => 'btn-link text-decoration-none' %></td>
            <td><%= link_to 'Destroy', contact, :class => 'btn-link text-decoration-none text-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>

<section class="fdb-block p-2">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col col-md-8 text-center">
        <p>Follow us on</p>
        <p>
          <a href="https://www.froala.com" class="mx-2 text-secondary text-decoration-none"><i class="fab fa-twitter" aria-hidden="true"></i></a>
          <a href="https://www.froala.com" class="mx-2 text-secondary"><i class="fab fa-facebook" aria-hidden="true"></i></a>
          <a href="https://www.froala.com" class="mx-2 text-secondary"><i class="fab fa-instagram" aria-hidden="true"></i></a>
          <a href="https://www.froala.com" class="mx-2 text-secondary"><i class="fab fa-pinterest" aria-hidden="true"></i></a>
          <a href="https://www.froala.com" class="mx-2 text-secondary"><i class="fab fa-google" aria-hidden="true"></i></a>
        </p>
      </div>
    </div>
  </div>
</section>

<section class="fdb-block bg-dark text-light">
  <div class="container">
    <div class="row text-center">
      <div class="col-12">
        <h3>Made with <i class="fas fa-heart text-danger"></i> by <a class="alex-rusu" href="https://alex.dutylabs.ro"> Alex Rusu</a></h1>
      </div>
    </div>
  </div>
</section>