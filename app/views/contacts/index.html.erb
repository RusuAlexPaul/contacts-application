<p id="notice"><%= notice %></p>

<section class="fdb-block bg-light text-dark">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col col-md-8 text-center">
        <h1>Business Contacts</h1>
        <p class="lead">Please check out my friends/business contacts! Feel free to add yoursefl on that list!</p>
      <div class="col col-md-12">
        <%= link_to 'Add Yourself', new_contact_path, :class => 'btn btn-primary text-light', :type => 'button' %>
      </div>

<section class="fdb-block bg-light">
  <div class="container pt-sm">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
          <th scope="col">Country</th>
          <th scope="col">City</th>
          <th colspan="3">Gender</th>
          <th scope="col">Age</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.name %></td>
            <td><%= contact.email %></td>
            <td><%= contact.phone %></td>
            <td><%= contact.country %></td>
            <td><%= contact.city %></td>
            <td><%= contact.gender %></td>
            <td><%= contact.age %></td>
            <td><%= link_to 'Show', contact %></td>
            <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
            <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>

<section class="fdb-block bg-light text-dark">
  <div class="container">
    <div class="row text-center">
      <div class="col-12">
        <h3>Made with <i class="fas fa-heart text-danger"></i> by <a class="alex-rusu" href="https://alex.dutylabs.ro"> Alex Rusu</a></h1>
      </div>
    </div>
  </div>
</section>